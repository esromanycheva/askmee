<div class="container">
  <p class="mt">
    <%= link_to "Создать новый запрос", new_question_path, class: 'button button-main' %>
    <%= link_to 'вернуться', :back %>
  </p>

  <p class="mt">
    <%= render 'form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container <%= question.hidden? ? 'hidden' : '' %>">
    <%= render question %>
  </div>
<% end %>
